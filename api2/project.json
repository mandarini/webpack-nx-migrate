{
  "name": "api2",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "api2/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/api2",
        "main": "api2/src/main.ts",
        "tsConfig": "api2/tsconfig.app.json",
        "assets": ["api2/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "api2/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api2:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api2:build:development"
        },
        "production": {
          "buildTarget": "api2:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["api2/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "api2/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
